<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" >


    <filter>
        <filter-name>cross-origin</filter-name>
        <filter-class>org.eclipse.jetty.servlets.CrossOriginFilter</filter-class>
    </filter>

    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>cross-origin</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ViewCartServlet</servlet-name>
        <servlet-class>ecommerce.http.fake.servlets.JSONViewCartServlet</servlet-class>

    </servlet>

    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>ecommerce.http.fake.servlets.AddCartServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CheckoutCartServlet</servlet-name>
        <servlet-class>ecommerce.http.fake.servlets.JSONCheckoutCartServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProductsDataJavascriptGeneratorServlet</servlet-name>
        <jsp-file>/WEB-INF/lib/javascript/products.js.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewCartServlet</servlet-name>
        <url-pattern>/en.cart.view.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/en.cart.add.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CheckoutCartServlet</servlet-name>
        <url-pattern>/en.cart.checkout.do</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>ProductsDataJavascriptGeneratorServlet</servlet-name>
        <url-pattern>/libs/javascript/product.data.js</url-pattern>
    </servlet-mapping>
</web-app>
